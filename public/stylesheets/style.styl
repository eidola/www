body
  width 960px
  margin 0 auto
  font-family "Droid Sans",sans-serif
  color #777
form
  width 90%
  margin 0 auto
  & > input
    width 70%

#header
  height 100px
  width 100%
  margin-top 1em

#navigation
  & > li
    list-style-type none
    float left
    margin-right 2em

#sidebar
  width 300px
  float right
  border-left 1px solid #000
  height 100%
  & > .feature
    height 240px
    width 200px
        margin 20px auto
    background #FFC0CB
    & > div
      height 198px
      width 198px
      border 1px solid #FFC0CB
      overflow hidden
      margin 0 auto
      & > img
        width 200px
    & > p
      text-transform uppercase
      text-align center
      font-size 0.7em
      font-style uppercase

#content
  border-left 1px solid #000
  margin-right 310px
  height 100%
  & > div
    width 90%
    margin 0 auto

#releases
  width 90%
  margin 0 auto
  & > .release
    position relative
    min-height 275px
    & > .title
      margin-bottom 15px
    & > .description
      min-height 200px
      width 100%
      background #FFC0CB
      margin-top 2px
      & > .textwrapper
        margin-left 200px
        min-height 200px
        overflow hidden
      & > .imgwrapper
        position absolute
        margin-top -10px
        margin-left -10px
        height 200px
        width 200px
        overflow hidden
      & > .tracks
        margin 0 auto

  .release
    ul
      list-style-type none
      font-size 0.8em
      float right

.release
  ul
    & > li
      float left
      margin-left 10px
#preview
  height 200px
  width 200px
  overflow hidden
  img
    width 200px
